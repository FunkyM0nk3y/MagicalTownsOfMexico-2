<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:navigationBarColor" tools:targetAPI="23">@color/primary_dark</item>
    </style>

    <style name="listMT" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/txtListMT</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listMTsub" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/txtListMT</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="listMTsubcoll" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/txtListMT</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>